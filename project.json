{
  "name": "create-merged-coverage-reports",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/create-merged-coverage-reports",
        "main": "./src/index.ts",
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          {
            "glob": "*.md",
            "input": "",
            "output": ""
          },
          {
            "glob": "LICENSE",
            "input": "",
            "output": ""
          }
        ],
        "project": "./package.json",
        "compiler": "swc",
        "format": ["cjs", "esm"],
        "generateExportsField": true,
        "rollupConfig": "rollup.config.js",
        "additionalEntryPoints": ["./src/bin.ts"]
      }
    },
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["./src/**/*.ts", "./package.json"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "coverage/create-merged-coverage-reports"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            { "type": "feat", "section": "Features" },
            { "type": "fix", "section": "Bug Fixes" },
            { "type": "perf", "section": "Performance Improvements" },
            { "type": "revert", "section": "Reverts" },
            { "type": "docs", "section": "Documentation" },
            { "type": "style", "section": "Styles" },
            { "type": "chore", "section": "Miscellaneous Chores" },
            { "type": "refactor", "section": "Code Refactoring" },
            { "type": "test", "section": "Tests" },
            { "type": "build", "section": "Build System" },
            { "type": "ci", "section": "Continuous Integration" }
          ]
        },
        "commitMessageFormat": "chore: release version {version} [skip ci]"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      },
      "configurations": {
        "local": {
          "registry": "http://localhost:4873"
        },
        "npm": {
          "registry": "https://registry.npmjs.org"
        }
      },
      "defaultConfiguration": "local"
    }
  },
  "tags": []
}
